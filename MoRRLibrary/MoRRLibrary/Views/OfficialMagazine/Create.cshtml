@model MoRRLibrary.Models.OfficialMagazine

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="h4 mb-2 text-gray-800">اضافه نمودن جریده</h4>
<div class="card shadow">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">جریده</h6>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-row">
                    <div class="form-group col-md-5">
                        @Html.LabelFor(model => model.Publisher, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Publisher, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Publisher, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-5">
                        @Html.LabelFor(model => model.PublicationDate, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.PublicationDate, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.PublicationDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-5">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-5">
                        @Html.LabelFor(model => model.DateEntered, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.DateEntered, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.DateEntered, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-5">
                        @Html.LabelFor(model => model.CodeNumber, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CodeNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CodeNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-5">
                        @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-5">
                        @Html.LabelFor(model => model.CabinetNumber, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CabinetNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CabinetNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-5">
                        @Html.LabelFor(model => model.ShelfNumber, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.ShelfNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ShelfNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-5">
                        @Html.LabelFor(model => model.SerialNumber, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.SerialNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SerialNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="form-group form-row">
                    <input type="submit" value="اضافه نمودن" class="btn btn-success m-1" />
                    @Html.ActionLink("لغو", "Index", "OfficialMagazine", new { @class = "btn btn-warning m-1" })
                </div>
                <div class="form-row flex-row-reverse">
                    @Html.ActionLink("برگشت به لیست جریده ها", "Index")
                </div>
            </div>
        </div>
    }
</div>
@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {
          $('#DateEntered').MdPersianDateTimePicker({
                targetTextSelector: '#DateEntered',
                dateFormat: 'yyyy-MM-dd',
                isGregorian: false,
                enableTimePicker: false,
                englishNumber: true
            });
        $('#PublicationDate').MdPersianDateTimePicker({
                targetTextSelector: '#PublicationDate',
                dateFormat: 'yyyy-MM-dd',
                isGregorian: false,
                enableTimePicker: false,
                englishNumber: true
            });
        })
    </script>

}
