@model MoRRLibrary.ViewModels.BorrowPublicationViewModel

<div class="container">
    <div class="row mt-2">
        <div><h6 class="m-1 font-weight-bold text-success">لیست جریده های گرفته شوده</h6></div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped" style="width:100%" cellspacing="0" id="borrowedOfficalMagazinesTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OfficalMagazines.First().Publisher)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OfficalMagazines.First().PublicationDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OfficalMagazines.First().DateEntered)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OfficalMagazines.First().SerialNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OfficalMagazines.First().CabinetNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OfficalMagazines.First().ShelfNumber)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

        </div>
    </div>
    <!--Search for book to be borrowed-->
    <div class="mt-3">
        <div class="border-bottom-primary"></div>
        <div class="mt-2"><h6 class="m-1 font-weight-bold text-primary">جستجو جریده</h6></div>
        <form>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label>منبع</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" id="txtSource" />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label>ناشر</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" id="txtPublisher" />
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col text-right">
                    <button type="button" id="btnOMagazineSearch" class="btn-success btn-sm pl-lg-5 pr-lg-5">جستجو</button>
                    <button type="reset" id="btnOMagazineReset" class="btn-warning btn-sm pl-lg-5 pr-lg-5">لغو</button>
                </div>
            </div>
        </form>
    </div>
            <!--Book search result-->
            <div class="row mt-1">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" style="width:100%" cellspacing="0" id="allOfficialMagazineTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.OfficalMagazines.First().Publisher)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OfficalMagazines.First().PublicationDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OfficalMagazines.First().DateEntered)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OfficalMagazines.First().SerialNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OfficalMagazines.First().CabinetNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OfficalMagazines.First().ShelfNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OfficalMagazines.First().Quantity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OfficalMagazines.First().AvailableQuantity)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
        </div>
