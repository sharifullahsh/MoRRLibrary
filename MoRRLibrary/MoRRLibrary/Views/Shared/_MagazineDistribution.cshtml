@model MoRRLibrary.ViewModels.BorrowPublicationViewModel
<div class="container">
    <div class="mt-3">

        <div class="mt-2"><h6 class="m-1 font-weight-bold text-primary">جستجو نمودن مجله</h6></div>
        <form>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label>نوع مجله</label>
                    <div class="col-md-12">
                        @Html.DropDownList("MagazineTypeId", null, "--نوع مجله را انتخاب کنید--", new { @class = "form-control", @direction = "ltr" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label>نام مجله</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" id="txtMagazineName" />
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-4 text-right">
                    <button type="button" id="btnMagazineSearch" class="btn-success btn-sm pl-lg-5 pr-lg-5 m-1">جستجو</button>
                    <button type="reset" id="btnMagazineReset" class="btn-warning btn-sm pl-lg-5 pr-lg-5 m-1">لغو</button>
                </div>
            </div>
        </form>

    </div>
    <!--Magazine search result-->
    <div class="row mt-1">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" style="width:100%" cellspacing="0" id="allMagazinesTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().MagazineType.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().Publisher)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().PublicationDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().SerialNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().DateEntered)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().CabinetNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().ShelfNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().AvailableQuantity)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>

    <!--All magazines distriuted to this employee-->
    <div class=" mt-3">
            <div class="border-bottom-primary"></div>
            <div class="mt-3"><h6 class="m-1 font-weight-bold text-success">لیست مجله های گرفته شوده</h6></div>
            <div class="table-responsive">
                <table class="table table-bordered table-striped" style="width:100%" cellspacing="0" id="magazinesDistributedTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().MagazineType.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().Publisher)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().PublicationDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().SerialNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazines.First().DateEntered)
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
</div>
