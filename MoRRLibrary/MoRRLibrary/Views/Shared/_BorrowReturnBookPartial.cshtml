@model MoRRLibrary.ViewModels.BorrowPublicationViewModel
<div class="container">
    <div class="row mt-2">
        <div><h6 class="m-1 font-weight-bold text-success">لیست کتاب های گرفته شوده</h6></div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped" style="width:100%" cellspacing="0" id="borrowedBooksTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Books.First().Name)
                        </th>                                   
                        <th>                                    
                            @Html.DisplayNameFor(model => model.Books.First().Author)
                        </th>                                   
                        <th>                                    
                            @Html.DisplayNameFor(model => model.Books.First().Language.Name)
                        </th>                                   
                        <th>                                    
                            @Html.DisplayNameFor(model => model.Books.First().CabinetNumber)
                        </th>                                   
                        <th>                                    
                            @Html.DisplayNameFor(model => model.Books.First().ShelfNumber)
                        </th>                                   
                        <th>                                    
                            @Html.DisplayNameFor(model => model.Books.First().SerialNumber)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <!--Search for book to be borrowed-->
    <div class="mt-3">
        <form>
            <div class="border-bottom-primary"></div>
            <div class="mt-2"><h6 class="m-1 font-weight-bold text-primary">جستجو کتاب</h6></div>
            <div class="row mt-2 mb-1">
                <label class="col-md-1">نام کتاب</label>
                <input type="text" class="form-control col-md-4" id="txtBookName" />
                <label class="col-md-2">نام نویسنده</label>
                <input type="text" class="form-control col-md-4" id="txtBookAuthorName" />
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="mt-2">
                    <button type="button" id="btnBookSearch" class="btn-success btn-sm pl-lg-5 pr-lg-5 m-1">جستجو</button>
                    <button type="reset" id="btnBookReset" class="btn-warning btn-sm pl-lg-5 pr-lg-5 m-1">لغو</button>
                </div>
            </div>
        </form>
    </div>
    <!--Book search result-->
    <div class="row mt-1">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" style="width:100%" cellspacing="0" id="allBooksTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Books.First().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Books.First().Author)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Books.First().Language.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Books.First().CabinetNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Books.First().ShelfNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Books.First().SerialNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Books.First().Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Books.First().AvailableQuantity)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </div>
</div>
